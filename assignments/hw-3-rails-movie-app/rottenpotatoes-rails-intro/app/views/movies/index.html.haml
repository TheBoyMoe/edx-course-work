-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{class: ('title' == @column)? 'hilite' : ''}
        = sort_link('title', 'Movies Title', 'title_header')
      %th Rating
      %th{class: ('release_date' == @column)? 'hilite' : ''}
        = sort_link('release_date', 'Release Date', 'release_date_header')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
